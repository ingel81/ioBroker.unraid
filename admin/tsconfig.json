// Specialized tsconfig for the admin directory,
// includes DOM typings and configures the admin build
{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "outDir": "./build",
        "sourceMap": true,
        "sourceRoot": "./src",
        "noImplicitAny": false,
        "allowJs": false,
        "checkJs": false,
        "lib": ["ES2018", "DOM"],
        "jsx": "react"
    },
    "include": ["./**/*.d.ts", "./**/*.ts", "./**/*.tsx", "../lib/adapter-config.d.ts"],
    "exclude": ["./**/*.test.ts", "./**/*.test.tsx"]
}
