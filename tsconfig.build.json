{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "noEmit": false,
        "allowJs": false,
        "esModuleInterop": true,
        "downlevelIteration": true
    },
    "include": ["src/**/*.ts", "lib/**/*.d.ts"],
    "exclude": ["build", "node_modules", "admin/src"]
}
